{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Front End",
  "homepage": "https://github.com/maxiaochuan/frontend#readme",
  "bugs": {
    "url": "https://github.com/maxiaochuan/frontend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxiaochuan/frontend.git"
  },
  "author": "Xiaochuan Ma <mxcins@gmail.com>",
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "schema:dev": "graphql get-schema dev",
    "generate-ts": "graphql-schema-typescript generate-ts src/graphql --output=src/graphql/generated.d.ts",
    "lint": "yarn lint:style && yarn lint:ts && yarn ts-compile-check",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js",
    "lint-staged:ts": "tslint --fix \"src/**/*.ts*\"",
    "lint:style": "stylelint \"src/**/*.less\" --syntax less",
    "lint:ts": "tslint --fix \"src/**/*.ts*\"",
    "prettier": "prettier --write \"./src/**/*\" \"./typings/**/*\" \"./config/**/*\"",
    "test": "umi test",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ts-compile-check && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": "npm run lint-staged:ts"
  },
  "dependencies": {
    "@mxcins/lodash": "1.0.0",
    "apollo-cache-inmemory": "1.5.1",
    "apollo-client": "2.5.1",
    "apollo-link-http": "1.5.14",
    "graphql": "14.2.1",
    "graphql-tag": "2.10.1",
    "react": "16.8.3",
    "react-apollo": "2.5.4",
    "react-dom": "16.8.3",
    "umi": "2.6.13",
    "umi-plugin-react": "1.7.4"
  },
  "devDependencies": {
    "@mxcins/types": "1.0.1",
    "@types/graphql": "14.2.0",
    "graphql-schema-typescript": "^1.2.9",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "stylelint": "9.x",
    "stylelint-config-mxcins": "1.0.0-rc.2",
    "tslint": "5.16.0",
    "tslint-config-mxcins": "1.0.0-rc.1",
    "typescript": "3.4.3"
  },
  "resolutions": {
    "@types/react": "16.8.8"
  }
}
