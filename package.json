{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Front End",
  "homepage": "https://github.com/maxiaochuan/frontend#readme",
  "bugs": {
    "url": "https://github.com/maxiaochuan/frontend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxiaochuan/frontend.git"
  },
  "author": "Xiaochuan Ma <mxcins@gmail.com>",
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "schema:dev": "graphql get-schema dev",
    "generate-ts": "graphql-schema-typescript generate-ts src/graphql --output=src/graphql/generated.d.ts",
    "lint": "yarn lint:style && yarn lint:ts && yarn ts-compile-check",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js",
    "lint-staged:ts": "tslint --fix \"src/**/*.ts*\"",
    "lint:style": "stylelint \"src/**/*.less\" --syntax less",
    "lint:ts": "tslint --fix \"src/**/*.ts*\"",
    "prettier": "prettier --write \"./src/**/*\" \"./typings/**/*\" \"./config/**/*\"",
    "test": "umi test",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ts-compile-check && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx,less}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx}": "npm run lint-staged:ts"
  },
  "dependencies": {
    "@mxcins/lodash": "1.0.1",
    "@mxcins/pluralize": "0.1.1",
    "@mxcins/request": "1.4.1",
    "@mxcins/utils": "1.5.1",
    "antd": "3.20.7",
    "apollo-boost": "0.4.3",
    "graphql": "14.4.2",
    "lodash-es": "4.17.11",
    "moment": "2.24.0",
    "react": "16.8.3",
    "react-apollo": "2.5.4",
    "react-apollo-hooks": "0.5.0",
    "react-dom": "16.8.3",
    "react-highlight-words": "0.16.0",
    "umi": "2.8.15",
    "umi-plugin-react": "1.9.13"
  },
  "devDependencies": {
    "@mxcins/types": "1.3.1",
    "@types/graphql": "14.2.0",
    "@types/jest": "24.0.11",
    "@types/lodash-es": "4.17.3",
    "@types/react-highlight-words": "0.16.0",
    "@types/react-intl": "^2.3.17",
    "graphql-schema-typescript": "1.2.9",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "stylelint": "9.x",
    "stylelint-config-mxcins": "1.0.0",
    "tslint": "5.16.0",
    "tslint-config-mxcins": "1.0.0",
    "typescript": "3.5.3",
    "umi-types": "^0.3.15"
  },
  "resolutions": {
    "@types/react": "16.8.14"
  }
}
